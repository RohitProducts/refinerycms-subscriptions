<% content_for :body_content_title do %>
  <%= @subscription.email %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @subscription.email %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="subscriptions">
      <% @subscriptions.each do |subscription| %>
        <li>
          <%= link_to subscription.email, refinery.subscriptions_subscription_path(subscription) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
